<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/match_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@drawable/matchtest" />

        <TextView
            android:id="@+id/textViewFirstTeam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/match_image"
            android:layout_alignParentStart="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="25dp"
            android:text="Россия"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewVs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/match_image"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@+id/textViewFirstTeam"
            android:text="VS"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewSecondTeam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/match_image"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/textViewVs"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="25dp"
            android:text="Испания"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/timeMatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewFirstTeam"
            android:layout_marginStart="30dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="15dp"
            android:text="Время начала матча : " />


        <TextView
            android:id="@+id/timeMatchInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewFirstTeam"
            android:layout_toEndOf="@+id/timeMatch"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="15dp"
            android:text="25 июня 16:30" />

        <TextView
            android:id="@+id/stadiumMatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/timeMatch"
            android:layout_marginStart="30dp"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="15dp"
            android:text="Стадион : " />

        <TextView
            android:id="@+id/stadiumMatchInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/timeMatch"
            android:layout_marginTop="17dp"
            android:layout_toEndOf="@+id/stadiumMatch"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="15dp"
            android:text="Лужники" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>